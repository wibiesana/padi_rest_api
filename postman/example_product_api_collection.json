                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Sample Product\",\n    \"description\": \"This is a sample product description\",\n    \"price\": 99.99,\n    \"stock\": 10,\n    \"category\": \"Electronics\",\n    \"status\": \"active\"\n}"
